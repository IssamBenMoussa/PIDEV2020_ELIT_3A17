{% extends 'backAdmin.html.twig' %}

{% block content %}
    <div id="container">
        <h1>Event</h1>

        <table class="table">
            <tbody>

            <tr>
                <th>Title</th>
                <td>{{ module.title }}</td>
            </tr>


            <tr>
                <th>Description</th>
                <td>{{ module.description }}</td>
            </tr>

            <tr class="bg-warning">
                <th>Creationdate</th>
                <td>{% if module.creationDate %}{{ module.creationDate|date('d/m/Y') }}{% endif %}</td>
            </tr>

            <tr class="bg-warning">
                <th>Admin</th>
                <td>{{ module.admin }}</td>
            </tr>


            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('module_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('module_edit', { 'id': module.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
