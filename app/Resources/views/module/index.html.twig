{% extends 'backAdmin.html.twig' %}

{% block content %}

    <br>

    <br>
    <BR>
    <!-- Static Table Start -->
    <div class="data-table-area mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="sparkline13-list">
                        <div class="sparkline13-hd">
                            <div class="main-sparkline13-hd">
                                <h1>Modules List</h1>
                            </div>
                        </div>
                        <div class="sparkline13-graph">
                            <div class="datatable-dashv1-list custom-datatable-overright">

                                <table id="table"  data-toggle="table" data-pagination="true" data-search="true" data-show-columns="true" data-show-pagination-switch="true" data-show-refresh="true" data-key-events="true" data-show-toggle="true" data-resizable="true" data-cookie="true"
                                       data-cookie-id-table="saveId" data-show-export="true" data-click-to-select="true" data-toolbar="#toolbar">
                                    <thead>
                                    <tr>

                                        <th data-field="xx" data-editable="false">Title</th>
                                        <th data-field="id">description</th>
                                        <th data-field="name" data-editable="false">creation date</th>
                                        <th data-field="email" data-editable="fasle">admin</th>
                                        <th data-field="action">Action</th>

                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for e in modules %}
                                        <tr>

                                            <td> {{e.title}}</td>
                                            <td> {{e.description}}</td>
                                            <td> {{e.CreationDate|date('d/m/Y')}}</td>
                                            <td> {{e.admin}}</td>
                                            <td> <a href="{{ path('module_edit', { 'id': e.id }) }}"><button type="button" class="btn btn-success">Edit</button></a>
                                                <a href="{{ path('module_show', { 'id': e.id }) }}"><button type="button" class="btn btn-info">Show</button></a>
                                            </td>

                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Static Table End -->

    <ul>
        <li>
            <a href="{{ path('module_new') }}"><button type="button" class="btn btn-warning">Create a new Module !</button></a>
        </li>
    </ul>
{% endblock %}
