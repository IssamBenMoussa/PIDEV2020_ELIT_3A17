                                    <tbody>
                                    {% for e in events %}
                                        {%  if  (date(e.startDate)< date('+7days'))
                                            and (date(e.startDate)>=date()) %}
                                        <tr class="bg-info">

                                            <td class=""> {{e.title}}</td>
                                            <td class=""> {{e.startDate|date('d/m/Y')}}</td>
                                            <td class=""> {{e.startHour|date('H:i')}}</td>
                                            <td class=""> {{e.description}}</td>
                                            <td class=""> <img src="{{ asset('uploads/issam_pic/')~e.logo }}"  style="width: 200px;
    height: 200px;
    object-fit: cover;
    object-position: center;
  display: block;
  margin-left: auto;
  margin-right: auto;"></td>

                                            <td class=""> {{e.idClub}}</td>
                                            <td> {{ e.idClassroom }}</td>


                                        </tr>
                                        {% endif %}
                                    {% endfor %}
