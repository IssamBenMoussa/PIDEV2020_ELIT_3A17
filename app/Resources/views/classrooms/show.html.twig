{% extends 'backAdmin.html.twig' %}

{% block content %}
<section class="content">
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header"><center>
                    <br></br>
                    <h3 class="box-title">Classroom</h3></center>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>

                        <tbody>

                        <tr>
                <th>Id</th>
                <td>{{ classroom.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
