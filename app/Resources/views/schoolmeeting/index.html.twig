{% extends 'backAdmin.html.twig' %}

{% block content %}
    <h1>Schoolmeetings list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Subject</th>
                <th>Concerned</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for schoolmeeting in schoolmeetings %}
            <tr>
                <td><a href="{{ path('schoolmeeting_show', { 'id': schoolmeeting.id }) }}">{{ schoolmeeting.id }}</a></td>
                <td>{% if schoolmeeting.date %}{{ schoolmeeting.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ schoolmeeting.subject }}</td>
                <td>{{ schoolmeeting.concerned }}</td>
                <td>{{ schoolmeeting.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('schoolmeeting_show', { 'id': schoolmeeting.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('schoolmeeting_edit', { 'id': schoolmeeting.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('schoolmeeting_new') }}">Create a new schoolmeeting</a>
        </li>
    </ul>
{% endblock %}
